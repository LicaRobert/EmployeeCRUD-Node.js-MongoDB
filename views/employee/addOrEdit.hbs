<h3>{{viewTitle}}</h3>

<form action="/employee" method="POST" autocomplete="off">
<input type="hidden" name="_id" value="{{employee._id}}">
    <div class="form-group">
        <label>Full Name</label>
        <input type="text" class="form-control" name="fullName" value="{{employee.fullName}}" placeholder="Full Name">
        <div class="text-danger">
            {{employee.fullNameError}}
        </div>
    </div>

        <div class="form-group">
            <label>Age</label>
            <input type="text" maxlength="2" minlength="2" class="form-control" name="age" value="{{employee.age}}" placeholder="Age">
              <div class="text-danger">
               {{employee.ageError}}
              </div>
        </div>

     <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" value="{{employee.email}}" placeholder="Email">
          <div class="text-danger">
            {{employee.emailError}}
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Mobile</label>
            <input type="text" maxlength="10" minlength="10" class="form-control" name="mobile" value="{{employee.mobile}}" placeholder="Mobile">
              <div class="text-danger">
               {{employee.mobileError}}
              </div>
        </div>

    <div class="form-row">
        <div class="form-group">
            <label>City</label>
            <input type="text" class="form-control" name="city" value="{{employee.city}}" placeholder="City">
             <div class="text-danger">
            {{employee.cityError}}
            </div>
        </div>
    </div>
    
    <div class="form-group">
        <hr/>
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/employee/list"><i class="fa fa-list-alt"> Back to list</i></a>
    </div>
</form>